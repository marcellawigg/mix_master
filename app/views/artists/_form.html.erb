<%= form_for(@artist) do |f| %>
  <ul>
    <% @artist.errors.full_messages.each do |error| %>
    <li> <%= error %> </li>
    <% end %>
  </ul>
  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :image_path %><br />
    <%= f.text_area :image_path %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>
